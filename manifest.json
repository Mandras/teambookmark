{
	"manifest_version": 2,
	"name": "Team Bookmark",
	"author": "https://github.com/Mandras",
	"version": "0.1",
	"default_locale": "en",

	"content_security_policy": "script-src 'self' https://www.teambookmark.org; object-src 'self'",

	"description": "__MSG_manifest_extension_description__",

	"homepage_url": "https://www.teambookmark.org/",

	"options_ui": {
		"page": "options/index.html"
	},

	"applications": {
		"gecko": {
			"id": "romain.benoit99@gmail.com",
			"strict_min_version": "42.0"
		}
	},

	"icons": {
		"128": 	"icons/team-bookmark-128.png",
		"96": 	"icons/team-bookmark-96.png",
		"64": 	"icons/team-bookmark-64.png",
		"48": 	"icons/team-bookmark-48.png",
		"32": 	"icons/team-bookmark-32.png",
		"16": 	"icons/team-bookmark-16.png"
	},

	"permissions": [
		"https://www.teambookmark.org/*",
		"webRequest",
		"bookmarks",
		"storage"
	],

	"background": {
		"scripts": [ "js/team-bookmark.js" ]
	}
}